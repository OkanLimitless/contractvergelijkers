{
  "name": "simple-landing-page",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:bellen": "cp .env.advies-neutraal-bellen .env.local && npm run build",
    "build:inbound": "cp .env.advies-neutraal-inbound .env.local && npm run build",
    "build:neutraal": "cp .env.advies-neutraal .env.local && npm run build",
    "build:bel": "cp .env.bel-adviesneutraal .env.local && npm run build",
    "start": "next start",
    "lint": "next lint",
    "dev:bellen": "npm run dev --workspace advies-neutraal-bellen",
    "dev:inbound": "npm run dev --workspace advies-neutraal-inbound",
    "dev:neutraal": "npm run dev --workspace advies-neutraal",
    "dev:bel": "npm run dev --workspace bel-adviesneutraal",
    "build:monorepo": "npm run build --workspaces --if-present"
  },
  "dependencies": {
    "lucide-react": "^0.545.0",
    "next": "14.0.0",
    "puppeteer": "^22.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
